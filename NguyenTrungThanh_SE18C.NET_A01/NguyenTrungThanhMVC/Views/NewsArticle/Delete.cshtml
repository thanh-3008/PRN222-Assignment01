@model BusinessObjects.NewsArticle

@{
    ViewData["Title"] = "Delete Article";
}

<h1>@ViewData["Title"]</h1>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h3>Are you sure you want to delete this article?</h3>
    </div>
    <div class="card-body">
        <h4 class="card-title">Article Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NewsTitle)</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@(Model.Category?.CategoryName ?? "N/A")</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@(Model.CreatedBy?.AccountName ?? "N/A")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="NewsArticleId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>