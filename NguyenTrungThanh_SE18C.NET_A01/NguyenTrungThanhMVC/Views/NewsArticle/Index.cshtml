@model IEnumerable<BusinessObjects.NewsArticle>

@{
    ViewData["Title"] = "News Management";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<div class="container my-5">
    <h1 class="mb-4 fw-bold">@ViewData["Title"]</h1>

    <div class="card admin-card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">News Article List</h5>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#form-modal" data-url="@Url.Action("Create")" data-title="Create New Article">
                    <i class="fa-solid fa-plus me-1"></i> Create New
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table admin-table mb-0">
                <thead>
                    <tr>
                        <th class="ps-3">Title</th>
                        <th>Category</th>
                        <th>Author</th>
                        <th>Created Date</th>
                        <th>Status</th>
                        <th style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3">@Html.DisplayFor(modelItem => item.NewsTitle)</td>
                            <td>@(item.Category?.CategoryName ?? "N/A")</td>
                            <td>@(item.CreatedBy?.AccountName ?? "N/A")</td>
                            <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.NewsStatus == true)
                                {
                                    <span class="badge bg-published">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-draft">Draft</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#form-modal" data-url="@Url.Action("Edit", new { id = item.NewsArticleId })" data-title="Edit Article">
                                        <i class="fa-solid fa-pen-to-square"></i> Edit
                                    </button>
                                    <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-outline-info"><i class="fa-solid fa-circle-info"></i> Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.NewsArticleId" class="btn btn-outline-danger"><i class="fa-solid fa-trash-can"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>