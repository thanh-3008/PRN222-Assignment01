@model NguyenTrungThanhMVC.Models.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Sign In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUNews Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="login-page-bg">

    <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-home-login">
        <i class="fa-solid fa-arrow-left me-2"></i> Back to Home
    </a>

    <div class="login-container">
        <div class="card shadow-lg login-card">
            <div class="row g-0">
                <div class="col-lg-6 d-none d-lg-flex login-branding-panel">
                    <div class="text-center">
                        <div class="login-logo-wrapper mb-4">FU</div>
                        <h1 class="text-white">FUNews</h1>
                        <p class="text-white-50">Stay updated with us</p>
                    </div>
                </div>
                <div class="col-lg-6 login-form-panel">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">Welcome Back!</h2>
                        <p class="text-muted">Enter your credentials to access your account.</p>
                    </div>

                    <form method="post" asp-controller="Account" asp-action="Login">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Email" class="form-control" placeholder="Email">
                                <label asp-for="Email">Email address</label>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="text-danger d-block mb-2"></span>

                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                                <label asp-for="Password">Password</label>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger d-block mb-2"></span>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                                <label class="form-check-label" asp-for="RememberMe"></label>
                            </div>
                            <a href="#" class="form-text text-decoration-none">Forgot Password?</a>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg fw-bold" type="submit">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>