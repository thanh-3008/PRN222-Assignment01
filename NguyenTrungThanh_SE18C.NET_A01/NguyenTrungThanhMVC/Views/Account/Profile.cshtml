@model NguyenTrungThanhMVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<div class="container my-5 profile-page">
    <h2 class="text-center mb-4 fw-bold">My Profile</h2>
    <div class="card shadow-lg profile-card">
        <div class="row g-0">
            <div class="col-md-6 profile-sidebar">
                <div class="text-center p-4">
                    <i class="fa-solid fa-user-circle profile-avatar mb-3"></i>
                    <h4 class="fw-bold">@User.Identity.Name</h4>
                    <p class="text-white-50">Administrator</p>
                </div>
            </div>

            <div class="col-md-6 profile-content">
                <div class="p-4">
                    <h4 class="mb-4 fw-bold">Change Password</h4>
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Current Password" />
                            <label asp-for="OldPassword"></label>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                            <label asp-for="NewPassword"></label>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary fw-bold px-4 py-2">
                                <i class="fa-solid fa-key me-2"></i>Change Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>